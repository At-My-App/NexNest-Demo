---
interface Props {
  title: string;
  subtitle: string;
  ctaPrimary?: { href: string; label: string };
  ctaSecondary?: { href: string; label: string };
}
const { title, subtitle, ctaPrimary, ctaSecondary } = Astro.props as Props;
---
<section class="relative -mt-16 pt-16 overflow-hidden bg-gradient-to-b from-cyan-50 to-white">
  <div class="absolute inset-0 -z-10" aria-hidden="true">
    <div class="absolute -top-24 -right-24 h-[600px] w-[600px] rounded-full opacity-40 bg-[radial-gradient(circle_at_center,rgba(6,182,212,0.35),transparent_60%)]"></div>
    <svg class="absolute -bottom-24 -left-24 opacity-20" width="600" height="600" viewBox="0 0 600 600" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="300" cy="300" r="300" fill="url(#g)" />
      <defs>
        <radialGradient id="g">
          <stop offset="0%" stop-color="#06b6d4" />
          <stop offset="100%" stop-color="#06b6d4" stop-opacity="0" />
        </radialGradient>
      </defs>
    </svg>
  </div>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24 md:py-32">
    <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
      <div>
        <span class="inline-flex items-center gap-2 rounded-full border border-cyan-200 bg-white/70 px-3 py-1 text-sm font-medium text-cyan-700 shadow-sm ring-1 ring-cyan-100 backdrop-blur">
          <span class="inline-block h-2 w-2 rounded-full bg-cyan-500"></span>
          New listings every week
        </span>
        <h1 class="mt-4 text-4xl md:text-6xl font-semibold tracking-tight text-slate-900">
          Find Your <span class="bg-gradient-to-r from-cyan-600 to-teal-500 bg-clip-text text-transparent">Next Nest</span>
        </h1>
        <p class="mt-5 max-w-2xl text-lg text-slate-600">{subtitle}</p>
        <div class="mt-8 flex flex-wrap items-center gap-4">
          {ctaPrimary && (
            <a href={ctaPrimary.href} class="inline-flex items-center rounded-md bg-cyan-600 px-5 py-3 text-white shadow-sm transition-colors hover:bg-cyan-500">
              {ctaPrimary.label}
            </a>
          )}
          {ctaSecondary && (
            <a href={ctaSecondary.href} class="inline-flex items-center rounded-md border border-slate-300 px-5 py-3 text-slate-700 hover:bg-slate-50">
              {ctaSecondary.label}
            </a>
          )}
        </div>
        <dl class="mt-10 grid w-full max-w-lg grid-cols-3 gap-4 text-left text-sm text-slate-600">
          <div>
            <dt class="font-medium text-slate-900">Listings</dt>
            <dd>120+ curated</dd>
          </div>
          <div>
            <dt class="font-medium text-slate-900">Cities</dt>
            <dd>35+ covered</dd>
          </div>
          <div>
            <dt class="font-medium text-slate-900">Satisfaction</dt>
            <dd>98% buyers</dd>
          </div>
        </dl>
      </div>
      <div class="relative">
        <div class="relative">
          <div class="aspect-[5/4] overflow-hidden rounded-3xl bg-cover bg-center shadow-2xl ring-1 ring-slate-200" style="background-image:url('https://images.unsplash.com/photo-1505691938895-1758d7feb511?q=80&w=1600&auto=format&fit=crop');"></div>
          <div class="absolute -bottom-8 -left-8 hidden w-1/2 overflow-hidden rounded-2xl bg-cover bg-center shadow-xl ring-1 ring-slate-200 md:block" style="background-image:url('https://images.unsplash.com/photo-1501183638710-841dd1904471?q=80&w=1200&auto=format&fit=crop');"></div>

          <!-- Overlay: top-right pill -->
          <div class="absolute -right-6 top-6 hidden items-center gap-3 rounded-xl bg-white/80 px-4 py-3 text-sm text-slate-700 shadow-lg ring-1 ring-slate-200 backdrop-blur md:flex">
            <span class="inline-block h-2.5 w-2.5 rounded-full bg-cyan-500"></span>
            Verified agents
          </div>

          <!-- Overlay: bottom-right glass stats card -->
          <div class="absolute -right-6 -bottom-6 hidden w-60 rounded-2xl bg-white/80 p-4 text-sm text-slate-700 shadow-xl ring-1 ring-slate-200 backdrop-blur md:block">
            <div class="flex items-center justify-between">
              <span class="font-medium text-slate-900">Market snapshot</span>
              <span class="rounded-full bg-cyan-100 px-2 py-0.5 text-xs font-semibold text-cyan-700">Updated</span>
            </div>
            <div class="mt-3 grid grid-cols-3 gap-2 text-center">
              <div>
                <div class="text-base font-semibold text-slate-900">120+</div>
                <div class="text-xs">Listings</div>
              </div>
              <div>
                <div class="text-base font-semibold text-slate-900">35</div>
                <div class="text-xs">Cities</div>
              </div>
              <div>
                <div class="text-base font-semibold text-slate-900">4.9</div>
                <div class="text-xs">Rating</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


