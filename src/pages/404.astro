---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page not found — NexNest">
  <section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24 text-center">
    <p class="text-sm font-semibold text-cyan-600">404</p>
    <h1 class="mt-2 text-3xl font-semibold tracking-tight text-slate-900">Page not found</h1>
    <p class="mt-2 text-slate-600">The page you’re looking for doesn’t exist or has been moved.</p>
    <div class="mt-8">
      <a href="/" class="inline-flex items-center rounded-md bg-cyan-600 px-5 py-3 text-white shadow-sm hover:bg-cyan-500">Back to home</a>
    </div>
  </section>
</BaseLayout>


